<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>day18-BookServlet</display-name>

  <context-param>
    <param-name>dao</param-name>
    <param-value>list</param-value>
  </context-param>
  <context-param>
    <param-name>logFileLoc</param-name>
    <param-value>WEB-INF/logs/book.log</param-value>
  </context-param>
  
  <servlet>
    <servlet-name>menuJsp</servlet-name>
    <jsp-file>/WEB-INF/views/book/menu.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>menuJsp</servlet-name>
    <url-pattern>/main/menu</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>listJsp</servlet-name>
    <jsp-file>/WEB-INF/views/book/list.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>listJsp</servlet-name>
    <url-pattern>/listJsp</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>insertJsp</servlet-name>
    <jsp-file>/WEB-INF/views/book/insert.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>insertJsp</servlet-name>
    <url-pattern>/insertJsp</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>msgJsp</servlet-name>
    <jsp-file>/WEB-INF/views/book/message.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>msgJsp</servlet-name>
    <url-pattern>/messageJsp</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>detailJsp</servlet-name>
    <jsp-file>/WEB-INF/views/book/detail.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>detailJsp</servlet-name>
    <url-pattern>/detailJsp</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>updateJsp</servlet-name>
    <jsp-file>/WEB-INF/views/book/update.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>updateJsp</servlet-name>
    <url-pattern>/updateJsp</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>loginJsp</servlet-name>
    <jsp-file>/WEB-INF/views/login/login.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>loginJsp</servlet-name>
    <url-pattern>/loginJsp</url-pattern>
  </servlet-mapping>
  
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
</web-app>